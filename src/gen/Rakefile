require 'rake/clean'
require 'erb'

CLOBBER.concat(['z80_gen.go', 'opcodes_gen.go'])

file "z80" => ["z80.go"] do
  puts "Compile z80.go"
  `make z80`
end

file "opcodes_gen.go" => ["z80", "opcodes_gen.go.template"] do
  puts "Write opcodes_gen.go"
  `./z80`

  puts "gofmt opcodes_gen.go"
  `gofmt -w opcodes_gen.go`
end

file "z80_gen.go" => ["z80_gen.go.erb"] do
  template = ERB.new(File.read('z80_gen.go.erb'))

  puts "Write z80_gen.go"
  File.open("z80_gen.go", 'w') { |f| f << template.result(binding) }

  puts "gofmt z80_gen.go"
  `gofmt -w z80_gen.go`
end

task :copy_all => ['z80_gen.go', 'opcodes_gen.go'] do
  cp "z80_gen.go", "../spectrum/"
  cp "opcodes_gen.go", "../spectrum/"
  Dir.chdir("../spectrum") do
    sh "make && gotest"
  end
end

task :default => ['z80_gen.go', 'opcodes_gen.go']
